  <mj-column vertical-align="top" width="100%">
    <mj-text align="left" font-size="45px" font-weight="bold" font-family="open Sans Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="30px" padding-top="50px">Dear {{ ad.user_firstName }} {{ ad.user_lastName }}</mj-text>
  </mj-column>
</mj-section>

