{% extends 'base.html.twig' %}

{% block title %}Twig Test{% endblock title %}

{% block header %}

<header class="h-32 sm:h-64 flex items-center justify-around px-6 py-3 bg-current">
  <div class="w-9/12 flex items-center justify-between md:px-16 md:py-3">
    <div>
      <img class="h-8 mr-8 sm:h-12 md:h-24 lg:w-64" src="{{ REQUEST_SCHEME }}://{{SERVER_NAME}}:8080//{{ BASE_PATH }}/assets/img/logo-inverted.svg" alt="Workcation">
    </div>
    <div>
      <button type="button" class="bg-white hover:border-white hover:border-4 hover:bg-gray-500 hover:text-white text-black font-bold py-2 px-2 sm:py-4 sm:px-4 rounded-lg">
          SUBMIT AD
      </button>
    </div>
  </div>
</header>


{% endblock header %}

{% block hero %}

<div class="bg-gray-200 h-64 flex items-center justify-center">
    <div class="w-3/5 h-24 pl-4 pr-4 bg-white border rounded-lg flex justify-between items-center relative">
      <input type="search" name="search" id="search" placeholder="Search"
             class="appearance-none w-full outline-none text-2xl  focus:outline-none active:outline-none"/>
      <button type="submit" class="-ml-8 sm:ml-1 outline-none focus:outline-none active:outline-none">
        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
             viewBox="0 0 24 24" class="w-10 h-10">
          <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </button>
    </div>
</div>

{% endblock hero %}

